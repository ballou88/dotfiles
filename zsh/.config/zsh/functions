# Claude wrapper function
function cc() {
    local claude_path="$HOME/.claude/local/claude"
    
    # Check if claude executable exists
    if [[ ! -x "$claude_path" ]]; then
        echo "Error: Claude executable not found or not executable at $claude_path" >&2
        return 1
    fi
    
    # Run claude with the dangerous flag and pass all arguments
    "$claude_path" --dangerously-skip-permissions "$@"
}
